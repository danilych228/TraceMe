<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TraceMe.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TraceMe"
    FlyoutBehavior="Disabled"
    Title="TraceMe">
    <ShellContent
        Title=""
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent Route="ActivityPage" ContentTemplate="{DataTemplate local:ActivityPage}" />
    <ShellContent Route="MenuPage" ContentTemplate="{DataTemplate local:MenuPage}" />
    <ShellContent Route="SettingsPage" ContentTemplate="{DataTemplate local:SettingsPage}" />
</Shell>
